<div class="carousel carousel-main" role="region" aria-label="Featured articles carousel">
	{% for post in get_posts(post.slider_posts) %}
		{% if post %}
			{% include "partial/hero-content.twig" with { 
				'tile': post,
				'is_first': loop.first,
				'total_slides': post.slider_posts|length,
				'current_slide': loop.index
			} %}
		{% endif %}
	{% endfor %}
	<button class="flickity-button flickity-prev-next-button previous" type="button" aria-label="Previous slide">
		<svg class="flickity-button-icon" viewBox="0 0 100 100" aria-hidden="true" focusable="false">
			<path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z"></path>
		</svg>
	</button>
	<button class="flickity-button flickity-prev-next-button next" type="button" aria-label="Next slide">
		<svg class="flickity-button-icon" viewBox="0 0 100 100" aria-hidden="true" focusable="false">
			<path d="M 30,50 L 80,100 L 90,90 L 50,50 L 90,10 L 80,0 Z"></path>
		</svg>
	</button>
	<div class="flickity-page-dots" role="tablist" aria-label="Slides">
		{% for post in get_posts(post.slider_posts) %}
			{% if post %}
				<button class="flickity-page-dot" type="button" role="tab" aria-label="Go to slide {{ loop.index }}" aria-selected="{{ loop.first ? 'true' : 'false' }}" aria-controls="carousel-cell-{{ loop.index }}"></button>
			{% endif %}
		{% endfor %}
	</div>
</div>

