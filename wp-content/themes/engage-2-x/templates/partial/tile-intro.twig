	{# Logic #}
	{# set default title #}
	{% set tileTitle = tile.title %}
	{#  #}
	{% if tile.name == "announcement" %}
		{% set tileClass = tile.name %}
		{% set tileTitle = tile.label %}
	{% elseif tile.slug == 'science-publications' %}
		{% set tileClass = tile.slug %}
	{% else %}
		{% set tileClass = tile.vertical.slug %}
	{% endif %}
	{# END logic #}
