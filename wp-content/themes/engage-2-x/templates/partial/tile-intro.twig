	{# Really need to keep the page title for not only SEO purposes but also for usability #}
	<div class="tile tile--intro">
		<h1 class="tile__title tile__title--intro title-slide-in">
			{{ tileTitle }}
			{% if tile.subtitle %}
				<span class="tile__title--subtitle">| {{ tile.subtitle }}</span>
			{% endif %}
		</h1>
		{% if post.post_excerpt %} {# check if the post has an excerpt first, otherwise WordPress will use part of the content #}
			<div class="tile__excerpt tile__excerpt--intro">{{ tile.excerpt }}</div>
		{% endif %}
	</div>
